/* pages/check/check.wxss */
.scroll_view {
  background-color: #fff;
  white-space: nowrap;
}

.tab {
  display: flex;
  text-align: center;
}

.tab .tab_item {
  height: 90rpx;
  display: inline-block;
  line-height: 90rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  flex: 1;
}

.select {
  color: #1067D1;
  border-bottom: 4rpx solid #1067D1;
}

.body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.body .noneImg {
  width: 200rpx;
  height: 200rpx;
  margin-top: 30rpx;
}

.body .noneData, .showAll {
  color: #717171;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.body .showAll text {
  margin: 0 20rpx;
}

.container{
  margin: 40rpx ;
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  box-shadow: 5rpx 5rpx lightgrey;
  border-radius: 20rpx;
  padding: 15rpx 10rpx;
}
.container .content{
  width: 90%;
  display: flex;
  /* justify-content: space-between; */
  padding: 25rpx 20rpx;
}
.container .content .detail{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.container .content .detail image{
  border: solid 2rpx lightgrey;
  width: 450rpx;
  height: 400rpx;
}

.container .content .detail button{
  /* width: 100rpx; */
  width: 45%;
  background-color: rgb(127, 245, 180);
  color: #fff;
  font-size: medium;
  margin-top: 20rpx;
  margin-right: 0rpx;
}
.container .content .detail button:nth-child(2){
  background-color: rgb(252, 119, 86);
}
.container .content .detail view{
  display: flex;

}
.container .userImg image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 5rpx solid rgb(182, 240, 255);
}
.container .header{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 25rpx;
}
.container .header text:nth-child(1){
  font-weight: 600;
  font-size: large;
}
.container .header text:nth-child(2){
  color: rgb(182, 182, 182);
  font-size: small;
}
.container .unfold{
  border-top: lightgrey 2rpx solid;
  width: 85%;
  padding: 15rpx;
  text-align: end;
  /* padding-right: 40rpx; */
  color: rgb(63, 148, 245);
}
